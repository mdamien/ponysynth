{% block tail_script %}
    <script>
        var FormHelpers = {
            validate: function (form, evt) {
                // Form validation for modal dialog
                var song_name = form.find('#name').val();
                var song_description = form.find('#content').val();
                if (!(song_name)) {
                    evt.preventDefault();
                    Utils.renderFieldErrorTooltip('#name', 'Name is required', 'right');
                }
                if (!(song_description)) {
                    evt.preventDefault();
                    Utils.renderFieldErrorTooltip('#content', 'Description is required', 'right');
                }
            },
            init: function () {
                var self = this;
                var song_form = $('#new-song-form');
                song_form.on('submit', function (evt) {
                    self.validate(song_form, evt)
                });
            }
        };
        $(document).ready(function() {
            FormHelpers.init();
        });
    </script>
{% endblock tail_script %}
