        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Added by</th>
                <th>Added on</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            {% for song in songs %}
            {% set song_id = song.key.id() %}
            <tr>
                <td>{{ song_id }}</td>
                <td>{{ song.name }}</td>
                <td>{{ song.added_by }}</td>
                <td class="nowrap">{{ song.timestamp.strftime('%b %d, %Y %I:%M %p') }}</td>
                <td>
                    <a href="{{ url_for('edit_song', song_id=song_id) }}" class="btn">Edit</a>
                </td>
                <td>
                    <form method="post" action="{{ url_for('delete_song', song_id=song_id) }}">
                        <button class="btn">Delete</button>
                    </form>
                </td>
